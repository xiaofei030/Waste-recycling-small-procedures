page {
  /* background-color: #e50055; */
  height: 100%;
}

/* 分类相关样式 */
.main {
  width: 100%;
  height: 100%;
}

.left {
  overflow: auto;
  width: 25%;
  float: left;
  box-sizing: border-box;
  height: 100vh;
}



.left-tab {
  margin-bottom: 10px;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
}

/* 被选中 */
.active {
  color: #ff4892;
  background: #fff;
}


/* 右侧栏目 */
.right {
  height: 100vh;
  width: 75%;
  float: right;
  /* padding: 0 2%; */
  overflow: auto;
  box-sizing: border-box;
  padding-bottom: 90rpx;
}

.right .title {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: gray;
  background-color: white;
}


/*菜品列表  */
.caipin_item {
  display: flex;
  align-items: center;
  padding: 10rpx 0rpx;
  background-color: #ffffff
}

.cai_img {
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  margin-left: 10rpx;
  margin-right: 30rpx;
}

.cai_root2 {
  flex: 1;
  min-width: 0
}

.cai_title {
  font-weight: 400;
  font-size: 40rpx;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}

.cai_sell {
  font-size: 33rpx;
  color: gray;
}

/*加减器*/

.stepper {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-right: 10rpx;
}

/*价格与数量加减器*/

.price-stepper {
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*价格*/

.cai_price {
  font-weight: bold;
  font-size: 32rpx;
  color: #ff4892;
}

/*人民币符号*/

.cai_price:before {
  content: "￥";
  font-size: 14px;
}



.jiajian {
  width: 40rpx;
  height: 40rpx;
}

.value_num {
  width: 50rpx;
  text-align: center;
}

/*数量*/

.value {
  font-size: 28rpx;
  margin: 0 20rpx;
  font-weight: bold;
  color: #ff4892;
}

/*底部区域  */

.bottom_box {
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0;
  bottom: 0px;
  z-index: 100;
  background: #fff;
   /* background-color: #e50055; */
}

.shop_cartBox {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  position: absolute;
  top: -50rpx;
  left: 40rpx;
}

.shopCart_img {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 24rpx;
  left: 24rpx;
}

.all_money {
  position: absolute;
  width: 50%;
  height: 80rpx;
  top: 0;
  left: 25%;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
}

.choose_ok {
  position: absolute;
  width: 25%;
  height: 80rpx;
  top: 0;
  right: 0;
  line-height: 80rpx;
  text-align: center;
  color: white;
  background-color: #e50055;
  font-size: 40rpx;
}

.fontP {
  color: #e50055;
  font-size: 40rpx;
}
