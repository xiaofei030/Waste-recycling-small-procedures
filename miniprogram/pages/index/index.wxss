  padding-bottom: 60rpx;
  background-color: #fff;
}

.container {
  width: 100%;
  height: 100%;
  align-items: center;
}

.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC;
}

.banner{
  width: 100%;
  height: 400rpx;
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 400rpx;
}

.recycle{
  margin-top: 5px;
  width: 95%;
  height: 160px;
}
.r_top{
  margin-left: 15px;
 width: 100%;
 height: 15px;
}
.rt-left{
  margin-left: 5px;
  float: left;
  width: 35%;
  height: 15px;
  font-size: 16px;
  font-style:bold;
}
.rt-right{
  font-size: 13px;
  color:rgb(192,192,192);
  float: right;
  width: 12%;
  height: 15px;
}
.g-right{
  font-size: 13px;
  color:rgb(192,192,192);
  float: right;
  width: 26%;
  height: 15px;
}
.r-img{
  width: 100%;
  height: 30px;
  display: flex;
}

.r-box{
  width: 40%;
  
}

.category-view {
  height: 300rpx;
  width: 100%;
  align-items: center;
  flex-wrap: wrap;
  display: flex;
}

.category-item {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.category-box {
  margin-left: 10px;
  display: flex;
  height: 150rpx;
  width: 150rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.guide-box {
  margin-left: 10px;
  display: flex;
  height: 150rpx;
  width: 150rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.circle-beg {

  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 11px;
}

.circle-beg image {
  height: 60rpx;
  width: 60rpx;
}

.card_item {
  flex: 1;
  margin: 10px;
  width: 100%;
  height: 259rpx;
  background: #F0F0F2;
  box-shadow: 4rpx 4rpx 12rpx 0rpx rgba(58, 58, 58, 0.15);
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  text-align: center;
  font-weight: bold;
  color: #000000;
  line-height: 23rpx;
  font-size: 30rpx;
}
.btn{
  width: 100%;
  height: 40px;
}

.yy {
  width: 259rpx;
  height: 209rpx;
}

image {
  width: 100%;
  height: 100%;
}

.wrapX {
  padding: 10rpx;
}

.wrapOut {
  /* background-color: rgb(201, 213, 221); */
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
}


.wrapInner {
  overflow: hidden;
  margin-left: 40rpx;
  margin-right: 40rpx;
}


.contant {
  line-height: 60rpx;
  white-space: nowrap;
  animation: remindMessage 13s linear infinite;
  width: 100%;
}


@keyframes remindMessage {
  0% {
    -webkit-transform: translateX(100%);
  }

  100% {
    -webkit-transform: translateX(-180%);
  }
}